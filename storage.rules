rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // โปรไฟล์ไรเดอร์ เก็บเป็น rider_profiles/{uid}.jpg
    match /rider_profiles/{uid}.jpg {
      allow read: if request.auth != null; // จะเปิด public ก็ได้ถ้าต้องการ
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
